% List references
% https://tex.stackexchange.com/questions/266715/referencing-an-in-theorem-list-item-without-the-preceding-theorem-number

\protected\def\perh@ps#1{#1}
\newcommand{\itemref}[2][]{%
    \begingroup
        \let\perh@ps\@gobble
        \ifstrempty{#1}{%
            \ref{#2}%
        }{%
            \hyperref[#2]{#1~\ref*{#2}}%
        }%
    \endgroup
}

